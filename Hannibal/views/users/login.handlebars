<h1 id="the-heading">Hannibal's login!</h1>
<div class = "row">
  <div class = "col-sm-12">
    <form id = "static-form"
     action='http://localhost:3000/hannibal/user/login' 
     method='post' 
     encType="multipart/form-data">
      <div class = "form-group">
        <label for="user_name">Username: </label><br>
        <input type="text" name="user_name" id="user_name"/>
        {{#if message}}
          <div id="error_username">{{message}}</div>
        {{/if}}<br><br>
      </div>
      
      <div class = "form-group">
        <label for="user_pass">Password: </label><br>
        <input type="password" name="user_pass" id="user_pass"/><br><br>
      </div>
      

      <input type="submit" id="submit" class="btn btn-success" value='Login !' /> <a class="btn btn-danger" href="http://localhost:3000/hannibal/signup" role="button">Create Your Account!</a>
    </form>    

  </div>
</div> 